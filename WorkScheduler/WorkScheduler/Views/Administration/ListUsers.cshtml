
@{
    ViewData["Title"] = "ListUsers";
}

@model IEnumerable<UserModel>
    <br />
<h1>All Users List</h1>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account"
       class="btn btn-primary mb-3" style="width:auto">
        Add new user
    </a>
    <table class="table table-hover">
        <thead>
            <tr class="table-dark">
                <th scope="row">
                    First Name
                </th>
                <th scope="row">
                    Last Name
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Position)
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr class="table-light">
                <td scope="row">
                    @Html.DisplayFor(modelItem => user.FirstName)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => user.LastName)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => user.Position)
                </td>
              
                <td>
                    <form asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" method="post">
                        <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="DetailsUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-primary">Details</a>
                        <button type="submit" class="btn btn-outline-secondary" onclick="return confirm('Are you sure you want to delete user: @user.FirstName @user.LastName')">Delete</button>
                    </form>     
                </td>
            </tr>
            }
        </tbody>
    </table>
}
